import curses
import random
import time

stdscr = curses.initscr()
curses.curs_set(0)
sh, sw = stdscr.getmaxyx()
w = curses.newwin(sh, sw, 0, 0)
w.keypad(1)
w.timeout(100)

cat_x = sw // 2
cat_y = sh - 1
fish_x = random.randint(1, sw - 1)
fish_y = 0
score = 0

while True:
    w.clear()
    w.border(0)
    w.addstr(cat_y, cat_x, "😺")
    w.addstr(fish_y, fish_x, "🐟")
    w.addstr(0, 2, f"Score: {score}")

    key = w.getch()
    if key == curses.KEY_LEFT and cat_x > 1:
        cat_x -= 1
    elif key == curses.KEY_RIGHT and cat_x < sw - 2:
        cat_x += 1

    fish_y += 1
    if fish_y == sh:
        fish_y = 0
        fish_x = random.randint(1, sw - 1)

    if fish_y == cat_y and fish_x == cat_x:
        score += 1
        fish_y = 0
        fish_x = random.randint(1, sw - 1)

    w.refresh()
    time.sleep(0.1)

curses.endwin()
